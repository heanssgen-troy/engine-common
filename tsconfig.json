{
  "include": ["src", "src/**/*","src/*"],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist"],
  "compilerOptions": {
    "composite": true,
    "types": ["vite/client", "node"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "removeComments": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
